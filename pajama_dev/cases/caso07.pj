// Sumar las edades de una lista lp de personas mayores que un n (tres casos)

rule sumaEdades(a){
   case [_, []] -> 0
  |case [n, [h when h.age>n | t]] -> h.age + sumaEdades([n, t])
  |case [n, [_|t]] -> sumaEdades([n, t])
}

expectEQ("sumaEdades([20, [{age:10}, {age:30}, {age:50}, {age:15}]])", "80");